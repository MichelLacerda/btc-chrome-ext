{
    "name": "BTC Price Monitoring",
    "version": "1.0",
    "description": "Stay on top of daily Bitcoin variations. Add pricing rules and get notified.",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "BTC"
    },
    "icons": {
        "16": "icons/btc_icon.png"
    },
    "permissions": ["storage", "notifications"]
}